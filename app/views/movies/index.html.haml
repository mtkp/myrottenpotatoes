.span12
  %h2 All Movies

  %table.table
    %thead
      %tr
        %th Movie Title
        %th Rating
        %th Release Date
        %th More Info
        %th Edit Movie
        %th Delete
    %tbody
      - @movies.each do |movie|
        %tr
          %td= movie.title
          %td= movie.rating
          %td= movie.release_date.strftime("%B %d, %Y")
          %td= link_to "More about #{movie.title}", movie_path(movie)
          %td= link_to "Edit #{movie.title}", edit_movie_path(movie)
          %td= link_to "Delete", movie_path(movie), method: :delete, confirm: "Are you sure?", class: "btn btn-mini"

  = link_to "Add new movie", new_movie_path