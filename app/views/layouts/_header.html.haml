%nav{role: "navigation", class: "navbar navbar-static-top navbar-inverse"}
  .container
    .navbar-header
      = render 'layouts/navbar_btn'
      = link_to "Rotten Potatoes", movies_path, class: "navbar-brand"
    .navbar-collapse.collapse.navbar-ex1-collapse
      %p.navbar-text.navbar-right
        - if current_user
          = "Logged in as #{current_user.name}."
          = link_to "Log out?", logout_path, class: "navbar-link "
        - else
          = link_to "Log in!", login_path, class: "navbar-link"
