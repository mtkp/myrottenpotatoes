.col-xs-12
  = form_tag({ action: :index }, { method: "get", role: "form" }) do
    .form-group
      = label_tag :search_terms, "Find movies by title:"
      = search_field_tag :search_terms, params[:search_terms], class: "form-control"
    = submit_tag "Search Rotten Potatoes", {name: nil, class: "btn btn-primary"}