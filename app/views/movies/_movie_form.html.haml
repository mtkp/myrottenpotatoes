= render 'shared/error_messages', object: movie
.form-group
  = label :movie, :title, "Title"
  = text_field :movie, :title, class: "form-control"
.form-group
  = label :movie, :rating, "Rating"
  = select :movie, :rating, Movie::RATINGS, {}, { class: "form-control" }
.form-group
  = label :movie, :release_date, "Released On"
  = date_select :movie, :release_date, { start_year: 1930 }, { class: "form-control" }
.form-group
  = label :movie, :description, "Description"
  = text_area :movie, :description, rows: 4, class: "form-control"
